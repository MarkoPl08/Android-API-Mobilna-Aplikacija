<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/paddingItemPager">

        <ImageView
            android:id="@+id/ivItem"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ivHeight"
            tools:src="@drawable/leaguehome" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/nameMarginTop">

            <TextView
                android:id="@+id/tvNameItem"
                android:layout_width="@dimen/widthItemPager"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:shadowColor="@color/black"
                android:shadowDx="6"
                android:shadowDy="6"
                android:shadowRadius="12"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="@dimen/txtSize"
                android:textStyle="bold"
                tools:text="@string/tvName" />

            <ImageView
                android:id="@+id/ivRead"
                android:layout_width="@dimen/widthItemPager"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:src="@drawable/devteemo" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:shadowColor="@color/black"
                android:shadowDx="6"
                android:shadowDy="6"
                android:shadowRadius="12"
                android:text="Title:"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="@dimen/txtSizedesc"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tvMarginTopItems"
                android:shadowColor="@color/black"
                android:shadowDx="6"
                android:shadowDy="6"
                android:shadowRadius="12"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="@dimen/txtSizedesc"
                android:textStyle="bold"
                tools:text="Title" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvBlurb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginTopBlurb"
            android:shadowColor="@color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="@dimen/txtSizedesc"
            android:textStyle="italic"
            tools:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s" />

    </LinearLayout>

</ScrollView>